{
  "name": "observant",
  "version": "1.0.0",
  "description": "Buddhist-inspired blog",
  "scripts": {
    "build": "postcss assets/css/main.css -o assets/css/styles.css",
    "watch": "postcss assets/css/main.css -o assets/css/styles.css --watch",
    "jekyll:build": "JEKYLL_ENV=production bundle exec jekyll build",
    "netlify:build": "npm run build && npm run jekyll:build"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.24",
    "postcss-cli": "^10.1.0",
    "tailwindcss": "^3.3.2"
  }
}
